<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.usuario.testingbd.EditProfile2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.1"
        android:minHeight="250dp"
        android:scaleType="center"
        app:srcCompat="@drawable/mercedestaxi" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewEditProfile2"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_nombreLogup" />

            <EditText
                android:id="@+id/nombreEditar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/textView16"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_nombreLogup"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/nombreEditar"
                android:text="@string/hint_nifCifLogup" />

            <EditText
                android:id="@+id/nifEditar"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView17"
                android:layout_marginTop="9dp"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_nifCifLogup"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/nifEditar"
                android:text="@string/hint_emailLogup" />

            <EditText
                android:id="@+id/emailEditar"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/textView18"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_emailLogin"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/emailEditar"
                android:text="@string/hint_licenciaLogup" />

            <EditText
                android:id="@+id/licenciaEditar"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_alignLeft="@+id/printerEditar"
                android:layout_alignStart="@+id/printerEditar"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/textView19"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_licenciaLogup"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignLeft="@+id/textView16"
                android:layout_alignStart="@+id/textView16"
                android:layout_below="@+id/licenciaEditar"
                android:text="@string/hint_printerLogup" />

            <EditText
                android:id="@+id/printerEditar"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_below="@+id/textView20"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_printerLogup"
                android:inputType="textCapSentences"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/guardar"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/printerEditar"
                android:onClick="actualizarPerfil"
                android:text="@string/logup"
                android:textColor="@android:color/black"
                android:textSize="15dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>