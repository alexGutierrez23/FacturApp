<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.usuario.testingbd.EditarHojaRuta1">

    <ImageView
        android:id="@+id/imageViewCrearHojaRuta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.1"
        android:minHeight="250dp"
        android:scaleType="center"
        app:srcCompat="@drawable/mercedestaxi" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewCrearHojaRuta"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewEditarLugarInicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/hint_lugarInicio" />

            <EditText
                android:id="@+id/lugarInicioServicioEditarHR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/textViewEditarLugarInicio"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_lugarInicio"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:textColor="#080808"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="23dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textViewEditarInicioServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lugarInicioServicioEditarHR"
                android:layout_alignStart="@+id/textViewEditarLugarInicio"
                android:layout_alignLeft="@+id/textViewEditarLugarInicio"
                android:layout_marginTop="10dp"
                android:text="@string/hint_inicioServicio" />

            <EditText
                android:id="@+id/inicioServicioEditarHR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_inicioServicio"
                android:inputType="textCapCharacters"
                android:singleLine="true"
                android:textColor="#080808"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="23dp"
                android:layout_below="@+id/textViewEditarInicioServicio"
                />

            <TextView
                android:id="@+id/textViewEditarDestinoServicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/inicioServicioEditarHR"
                android:layout_alignStart="@+id/textViewEditarLugarInicio"
                android:layout_alignLeft="@+id/textViewEditarLugarInicio"
                android:layout_marginTop="10dp"
                android:text="@string/hint_destinoDelServicio" />

            <EditText
                android:id="@+id/destinoServicioEditarHR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_destinoDelServicio"
                android:singleLine="true"
                android:textColor="#080808"
                android:inputType="textCapCharacters"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="23dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/textViewEditarDestinoServicio"
                />

            <TextView
                android:id="@+id/textViewEditarPasajeros"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/destinoServicioEditarHR"
                android:layout_alignStart="@+id/textViewEditarLugarInicio"
                android:layout_alignLeft="@+id/textViewEditarLugarInicio"
                android:layout_marginTop="10dp"
                android:text="@string/hint_pasajeros" />

            <EditText
                android:id="@+id/pasajerosEditarHR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_pasajeros"
                android:singleLine="true"
                android:textColor="#080808"
                android:inputType="textCapCharacters"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="23dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/textViewEditarPasajeros"
                />

            <TextView
                android:id="@+id/textViewEditarObservaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pasajerosEditarHR"
                android:layout_alignStart="@+id/textViewEditarLugarInicio"
                android:layout_alignLeft="@+id/textViewEditarLugarInicio"
                android:layout_marginTop="10dp"
                android:text="@string/hint_observaciones" />

            <EditText
                android:id="@+id/observacionesEditarHR"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_below="@+id/textViewEditarObservaciones"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_fields"
                android:gravity="center"
                android:hint="@string/hint_observaciones"
                android:textColor="#080808"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="23dp"
                android:ems="10"
                android:inputType="textCapCharacters|textMultiLine"
                />

            <Button
                android:id="@+id/button_crearContrato"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/observacionesEditarHR"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:onClick="goToEditarHojaRuta2"
                android:text="@string/button_next" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
