<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:xmnls="http://schemas.android.com/tools"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewContratos"
        xmnls:card_view="https://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="5dp"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/arrendadorTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:text="Arrendador: "
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/arrendadorContrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="10sp"
                android:layout_toRightOf="@+id/arrendadorTitle"
                android:text="Arrendador contrato"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/arrendatarioTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:layout_below="@+id/arrendadorTitle"
                android:text="Arrendatario: "
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/arrendatarioContrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_toRightOf="@+id/arrendatarioTitle"
                android:text="Arrendatario contrato"
                android:layout_marginTop="5sp"
                android:textColor="@color/colorPrimary"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_below="@+id/arrendadorContrato"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/numContratoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginLeft="180dp"
                android:layout_marginTop="10sp"
                android:layout_below="@+id/arrendatarioTitle"
                android:text="Contrato: "
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/numContrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrendatarioContrato"
                android:layout_toRightOf="@+id/numContratoTitle"
                android:textSize="15sp"
                android:text="Num contrato"
                android:layout_marginTop="10sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorPrimary" />

            <ImageButton
                android:layout_width="35sp"
                android:layout_height="25sp"
                android:id="@+id/editBtnItemContrato"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_below="@+id/numContrato"
                android:layout_marginLeft="40sp"
                android:layout_marginTop="13sp"
                android:scaleType="center"
                android:tint="@color/colorAccent"
                />

            <ImageButton
                android:id="@+id/borrarBtnItemContrato"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_toRightOf="@+id/editBtnItemContrato"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/ic_delete_black_24dp"
                android:layout_marginLeft="40sp"
                android:layout_below="@+id/numContrato"
                android:layout_marginTop="8sp"
                android:tint="@color/colorAccent" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>