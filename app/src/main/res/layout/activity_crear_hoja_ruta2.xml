<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.usuario.testingbd.CrearHojaRuta2">

    <ImageView
        android:id="@+id/imageViewCrearHojaRuta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:alpha="0.1"
        android:minHeight="250dp"
        android:scaleType="center"
        app:srcCompat="@drawable/mercedestaxi" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollViewCrearHojaRuta"
        android:fillViewport="true"
        android:isScrollContainer="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/mostrarFechaInicioHojaRuta"
                android:layout_width="170dip"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/rounded_fields"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/hint_fechaInicio"
                android:singleLine="true"
                android:textColor="#080808"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20dp"
            />

            <Button
                android:id="@+id/selecFechaInicioHojaRuta"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Seleccionar fecha"
                android:textColor="#090909"
                android:textSize="10dp"
                android:layout_alignTop="@+id/mostrarFechaInicioHojaRuta"
                android:layout_marginLeft="200sp"
            />

            <TextView
                android:id="@+id/mostrarFechaFinHojaRuta"
                android:layout_width="170dip"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/rounded_fields"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/hint_fechaFin"
                android:singleLine="true"
                android:textColor="#080808"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20dp"
                android:layout_below="@+id/mostrarFechaInicioHojaRuta"
                />

            <Button
                android:id="@+id/selecFechaFinHojaRuta"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Seleccionar fecha"
                android:textColor="#090909"
                android:textSize="10dp"
                android:layout_alignTop="@+id/mostrarFechaFinHojaRuta"
                android:layout_alignRight="@+id/selecFechaInicioHojaRuta"
                />

            <TextView
                android:id="@+id/mostrarHoraInicioHojaRuta"
                android:layout_width="170dip"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/rounded_fields"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/hint_horaInicio"
                android:singleLine="true"
                android:textColor="#080808"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20dp"
                android:layout_below="@+id/mostrarFechaFinHojaRuta"
                />

            <Button
                android:id="@+id/selecHoraInicioHojaRuta"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Seleccionar hora"
                android:textColor="#090909"
                android:textSize="10dp"
                android:layout_alignTop="@+id/mostrarHoraInicioHojaRuta"
                android:layout_alignRight="@+id/selecFechaInicioHojaRuta"
                />

            <TextView
                android:id="@+id/mostrarHoraFinHojaRuta"
                android:layout_width="170dip"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/rounded_fields"
                android:enabled="false"
                android:gravity="center"
                android:hint="@string/hint_horaFin"
                android:singleLine="true"
                android:textColor="#080808"
                android:textColorHint="@android:color/darker_gray"
                android:textSize="20dp"
                android:layout_below="@+id/mostrarHoraInicioHojaRuta"
                />

            <Button
                android:id="@+id/selecHoraFinHojaRuta"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Seleccionar hora"
                android:textColor="#090909"
                android:textSize="10dp"
                android:layout_alignTop="@+id/mostrarHoraFinHojaRuta"
                android:layout_alignRight="@+id/selecFechaInicioHojaRuta"
                />

            <Button
                android:id="@+id/button_crearContrato"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/mostrarHoraFinHojaRuta"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="goToCrearHojaRuta3"
                android:text="@string/button_next" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
